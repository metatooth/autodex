{
  "name": "autodex",
  "version": "0.2.0",
  "description": "AUTOmated inDEX",
  "type": "module",
  "scripts": {
    "build": "concurrently --prefix \"[{name}]\" --names \"CLIENT,SERVER,ETL\" -c \"bgBlue.bold,bgGreen.bold,bgRed.bold\" \"npm run build:client\" \"npm run build:server\" \"npm run build:etl\"",
    "build:etl": "tsc -b ./etl",
    "build:clean": "tsc -b ./clean",
    "build:server": "tsc -b ./server",
    "copy": "npm run-all copy:client copy:server",
    "copy:client": "npm-run-all copy:client:favicon copy:client:views",
    "copy:client:favicon": "cp ./shared/assets/favicon.ico ./dist/client/favicon.ico",
    "copy:client:views": "cp -r ./client/views ./dist/client/views",
    "copy:server": "cp ./shared/assets/favicon.ico ./dist/server/favicon.ico",
    "clean": "rm -rf ./dist",
    "build-client": "npm-run-all clean:client build:client copy:client",
    "build-server": "npm-run-all clean:server build:server copy:server",
    "build:client": "vue-tsc --project ./client --noEmit && vite build ./client",
    "watch:client": "nodemon --watch server -e ts,vue --exec vue-tsc --project ./client --noEmit",
    "clean:client": "rm -rf ./dist/client",
    "clean:server": "rm -rf ./dist/server",
    "lint": "npm-run-all lint:clean lint:etl lint:client lint:server",
    "lint:clean": "eslint clean --ext .ts",
    "lint:etl": "eslint etl --ext .ts",
    "lint:client": "eslint client --ext .ts,.vue",
    "lint:server": "eslint server --ext .ts",
    "serve": "concurrently --prefix \"[{name}]\" --names \"CLIENT,SERVER\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run serve:client\" \"npm run serve:server\"",
    "serve:client": "vite ./client",
    "preview:client": "vite preview ./client",
    "serve:client:start": "npm-run-all build-client start:client",
    "start:client": "node dist/client/main.js",
    "serve:server": "nodemon --watch server -e ts --exec npm run serve:server:start",
    "serve:server:start": "npm-run-all build-server start:server",
    "start:server": "node dist/server/main.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fast-csv/parse": "^4.3.6",
    "@types/serve-favicon": "^2.5.3",
    "@vitejs/plugin-vue": "^2.3.2",
    "axios": "^0.27.2",
    "bulma": "^0.9.4",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "pg": "^8.7.3",
    "sass": "^1.51.0",
    "serve-favicon": "^2.5.0",
    "vite": "^2.9.8",
    "vite-plugin-singlefile": "^0.9.0",
    "vue": "^3.2.33"
  },
  "devDependencies": {
    "@babel/types": "^7.17.10",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.25",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-ejs": "^0.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-vue": "^8.7.1",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^12.6.0",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.0-dev.20220512",
    "vue-tsc": "^0.34.12"
  }
}
